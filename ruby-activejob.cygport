inherit rubygem

NAME="ruby-activejob"
VERSION=4.2.1
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Ruby Active Job extension"
DESCRIPTION="A Rails component for declaring job classes that can be run by a
variety of queueing backends."

ARCH=noarch

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_activejob_CONTENTS="${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_activejob_doc_CONTENTS=${RUBYGEM_DOCDIR#/}

